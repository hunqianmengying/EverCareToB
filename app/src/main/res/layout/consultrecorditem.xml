<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/circle_rectangle_bg"
    android:padding="10dp">

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="2"
        android:layout_marginRight="20dp"
        android:text="您好，给客户一份真诚问候，给自己一个合作的朋给自己一个合作的朋友咨询给自己一个合作的朋友咨询给自己一个合作的朋友咨询给自己一个合作的朋友咨询给自己一个合作的朋友咨询友咨询"
        android:textColor="#FF666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_content"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_smallclock"

        android:drawablePadding="@dimen/padding_8"
        android:textColor="@color/font_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txt_content"
        android:layout_marginRight="25dp"
        android:textSize="13sp"
        android:textColor="@color/font_light"
        android:layout_marginTop="5dp"
      />

    <ImageView
        android:id="@+id/expend_view"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_down" />

</RelativeLayout>