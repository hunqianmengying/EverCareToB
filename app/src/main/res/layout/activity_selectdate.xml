<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/circle_rectangle_bg">

    <TextView
        android:id="@+id/txt_task_date_tem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:text="任务时间"
        android:textColor="@color/header_text"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rdg_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_task_date_tem"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/rdb_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="明天"
            android:paddingLeft="10dp"
            android:checked="true"
            android:button="@drawable/rdb_button"
            android:textColor="@color/header_text"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rdb_day_after_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="后天"
            android:paddingLeft="10dp"
            android:button="@drawable/rdb_button"
            android:textColor="@color/header_text"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rdb_next_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="下周" android:paddingLeft="10dp"
            android:button="@drawable/rdb_button"
            android:textColor="@color/header_text"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rdb_custom_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="自定义..."
            android:button="@drawable/rdb_button"
            android:textColor="@color/header_text"
            android:textSize="16sp" />
    </RadioGroup>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rdg_group"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/input_border" />

    <Button
        android:id="@+id/btn_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_margin="5dp"
        android:background="@color/transparent"
        android:padding="10dp"
        android:text="取消"
        android:textColor="@color/gray_7"
        android:textSize="16sp" />

</RelativeLayout>