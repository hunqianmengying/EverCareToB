<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/driver_sliding_text" />

    <ImageView
        android:id="@+id/img_delete_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_project_delete"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_project_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="95dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxWidth="40dp"
        android:text="9233"
        android:textColor="@color/header_bg"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_project_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxWidth="65dp"
        android:text="3999.33"
        android:textColor="@color/header_bg"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_price_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/txt_project_price"
        android:text="¥"
        android:textColor="@color/header_bg"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="130dp"
        android:layout_toRightOf="@id/img_delete_project"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="激光点数毛激"
        android:textColor="@color/header_text"
        android:textSize="16sp" />

</RelativeLayout>