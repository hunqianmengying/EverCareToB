<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circle_rectangle_bg"
    android:paddingBottom="15dp">

    <RelativeLayout
        android:id="@+id/rvl_customer_tem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/img_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_success" />

        <TextView
            android:id="@+id/txt_name_tem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_select"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="已选中的客户："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_select"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/txt_name_tem"
            android:text="张丹妮"
            android:textSize="16sp" />
    </RelativeLayout>


    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rvl_customer_tem"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:background="@color/input_border" />


    <TextView
        android:id="@+id/txt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:text="取消"
        android:paddingBottom="4dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_back_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/txt_backpublic_bg"
        android:paddingBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="4dp"
        android:text="退回公海"
        android:textColor="@color/header_bg"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_turn_private"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/txt_back_public"
        android:background="@drawable/txt_turnprivate_bg"
        android:paddingBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="4dp"
        android:text="转到私海"
        android:textColor="@color/txt_gold"
        android:textSize="14sp"
        android:visibility="visible" />

</RelativeLayout>