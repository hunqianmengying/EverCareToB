<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/circle_rectangle_bg"
    android:padding="10dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="讨论下玻尿酸"
        android:textColor="@color/header_text"
        android:textSize="16sp" />

    <View
        android:id="@+id/red_point"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="5dp"
        android:background="@drawable/red_point" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/red_point"
        android:ellipsize="end"
        android:lines="2"
        android:text="您好，给客户一份真诚问候，给自己一个合作的朋给自己一个合作的朋友咨询给自己一个合作的朋友咨询给自己一个合作的朋友咨询给自己一个合作的朋友咨询给自己一个合作的朋友咨询友咨询"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txt_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_smallclock"
        android:drawablePadding="@dimen/padding_8"
        android:text="2016-09-11"
        android:textColor="@color/font_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/txt_news_bg"
        android:padding="5dp"
        android:text="到诊通知"
        android:textColor="@color/white"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/txt_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/txt_news_border"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:text="转到"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

</RelativeLayout>