<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/circle_rectangle_bg"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:maxWidth="240dp"
            android:text="开眼角"
            android:textColor="@color/header_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_project_name"
            android:layout_marginTop="8dp"
            android:drawablePadding="@dimen/padding_8"
            android:text="项目收款"
            android:textColor="@color/gray_7"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_buy_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_type"
            android:layout_below="@id/txt_project_name"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="8dp"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_buy_num_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_type"
            android:layout_below="@id/txt_project_name"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/txt_buy_num"
            android:text="次"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <!--<TextView
            android:id="@+id/txt_counselor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_type"
            android:layout_below="@id/txt_project_name"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/gray_7"
            android:textSize="12sp" />-->

        <TextView
            android:id="@+id/txt_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_type"
            android:layout_below="@id/txt_project_name"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:text="爱法规"
            android:textColor="@color/gray_7"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_nurse_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_type"
            android:layout_below="@id/txt_project_name"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:text="法第三"
            android:textColor="@color/gray_7"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:text="2017-01-01"
            android:textColor="@color/gray_7"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/txt_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_type"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_time"
            android:layout_marginRight="0dp"
            android:gravity="bottom"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_residue_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_type"
            android:layout_below="@id/txt_time"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/txt_account"
            android:gravity="bottom"
            android:text="¥"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>